<form method="post" action="/weapons">
  <label for="manufacturer_id">Manufacturer</label>
  <select id="manufacturer_id" name="manufacturer_id">

    <% @manufacturers.each do |manufacturer| %>
    <option value ="<%= manufacturer.id %>"><%= manufacturer.name %></option>
    <% end%>
  </select>

  <label for="name">Weapon Name</label>
  <input id="name" type="string" name="name" />


  <label for="type_id">Weapon Type</label>
  <select id="type_id" name="type_id">
    <% @type.each do |item| %>
    <option value="<%= item.id %>"><%= item.type %></option>
    <% end %>
  </select>

  <label for="quantity">Quantity: </label>
  <input id="quantity" type="number" name="quantity" />

  <label for="cost_price">Cost Price</label>
  <input id="cost_price" type="number" name="cost_price" />

  <label for="retail_price">Retail Price</label>
  <input id="retail_price" type="number" name="retail_price" />

  <input type="submit" value="Place Order" />
</form>
